<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Recharge Page</title>
  <link rel="stylesheet" href="css/style.css">
</head>
<body>
  
  <!-- Navigation Bar -->
  <%- include('navigation') %> 

  <!-- Fullscreen Image/Video Banner -->
  <section class="fullscreen-banner">
    <!-- Uncomment one of the following lines based on your preference -->
    <!-- For Fullscreen Image -->
    <img src="images/banner.jpg" alt="Recharge Banner" class="banner-image">
    
    <!-- For Fullscreen Video -->
    <!-- <video autoplay muted loop class="banner-video">
      <source src="videos/banner.mp4" type="video/mp4">
      Your browser does not support the video tag.
    </video> -->
    
    <div class="banner-text">
      <h1>From Concept to Creation.</h1>
      <p>Execution with Excellence. RoundPay Crafts Cutting-Edge Apps, Websites, and Systems.</p>
      <Button class="btn3">Let's connect</Button>
    </div>
   
  </section>
 <!-- Horizontal Components Section -->
 <section class="horizontal-components">
  <div class="component">
    <img src="images/Api.jpg" alt="Component 1">
    <h3>Component 1</h3>
    <p>Short description about component 1.</p>
  </div>
  <div class="component">
    <img src="images/cyber1.jpg" alt="Component 2">
    <h3>Component 2</h3>
    <p>Short description about component 2.</p>
  </div>
  <div class="component">
    <img src="images/Website.jpg" alt="Component 3">
    <h3>Component 3</h3>
    <p>Short description about component 3.</p>
  </div>
  <div class="component">
    <img src="images/app.jpg" alt="Component 4">
    <h3>Component 4</h3>
    <p>Short description about component 4.</p>
  </div>
</section>
  <!-- Main Content -->
  <section id="recharge" class="recharge-section">
    <div class="container">
      <h1>Recharge Your Mobile Instantly</h1>
      <form class="recharge-form">
        <label for="phone">Phone Number</label>
        <input type="text" id="phone" name="phone" placeholder="Enter phone number" required>

        <label for="operator">Select Operator</label>
        <select id="operator" name="operator">
          <option value="airtel">Airtel</option>
          <option value="jio">Jio</option>
          <option value="vodafone">Vodafone</option>
          <option value="bsnl">BSNL</option>
        </select>

        <label for="amount">Recharge Amount</label>
        <input type="number" id="amount" name="amount" placeholder="Enter amount" required>

        <button type="submit" class="btn-recharge">Recharge Now</button>
      </form>
    </div>
  </section>


  <!-- Social Media Icons (Sticky) -->
  <div class="social-icons">
    <a href="https://wa.me/1234567890" target="_blank" class="social-icon whatsapp">
      <img src="images/whatsapp.jpg" alt="WhatsApp"><span class="social-text">WhatsApp</span>
    </a>
    <a href="https://www.instagram.com/yourprofile" target="_blank" class="social-icon instagram">
      <img src="images/instagram.jpg" alt="Instagram">
    </a>
  </div>
  <footer>
    <p>&copy; 2024 RechargeNow. All rights reserved.</p>
  </footer>

  <script>
    // Toggle menu for smaller screens
    const hamburger = document.querySelector('.hamburger');
    const navLinks = document.querySelector('.nav-links');

    hamburger.addEventListener('click', () => {
      navLinks.classList.toggle('open');
    });
  </script>
</body>
</html>
